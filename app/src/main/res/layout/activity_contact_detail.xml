<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetailActivity">

    <ImageView
      android:id="@+id/contact_picture"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

    <TextView
      android:id="@+id/contact_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:text="Nama Kontak"
      app:layout_constraintBottom_toBottomOf="@+id/contact_name_copy"
      app:layout_constraintEnd_toStartOf="@+id/contact_name_copy"
      app:layout_constraintStart_toStartOf="@+id/contact_picture"
      app:layout_constraintTop_toBottomOf="@+id/contact_picture" />

    <ImageButton
      android:id="@+id/contact_name_copy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="@+id/contact_picture"
      app:layout_constraintTop_toBottomOf="@+id/contact_picture"
      app:srcCompat="?attr/actionModeCopyDrawable" />

    <androidx.cardview.widget.CardView
      android:id="@+id/contactCV"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:cardBackgroundColor="@color/gray"
      app:cardCornerRadius="8dp"
      app:cardMaxElevation="10dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/contact_name_copy">
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
          android:id="@+id/idTVContactDOB"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Lahir"
          android:textColor="@color/black" />

        <TextView
          android:id="@+id/idTVContactGender"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/idTVContactDOB"
          android:text="Jenis Kelamin"
          android:textColor="@color/black" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/contactCV2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:cardBackgroundColor="@color/gray"
      app:cardCornerRadius="8dp"
      app:cardMaxElevation="10dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/contactCV">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
          android:id="@+id/idTVContactSurel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Surel"
          android:textColor="@color/black" />

        <TextView
          android:id="@+id/idTVContactTelpon"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/idTVContactSurel"
          android:text="Telpon"
          android:textColor="@color/black" />

        <TextView
          android:id="@+id/idTVContactSeluler"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/idTVContactTelpon"
          android:text="Seluler"
          android:textColor="@color/black" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/contactCV3"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:cardBackgroundColor="@color/gray"
      app:cardCornerRadius="8dp"
      app:cardMaxElevation="10dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/contactCV2">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
          android:id="@+id/idTVContactAlamat"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Alamat"
          android:textColor="@color/black" />

        <TextView
          android:id="@+id/idTVContactLokasi"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/idTVContactAlamat"
          android:text="Lokasi"
          android:textColor="@color/black" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
